<div id="<%= dom_id message %>" class='bg-teal-200 rounded-lg mt-3 py-3 px-2 shadow-xl'>
  <p>
    <% if message.outgoing %>
      <strong>Outgoing Message --></strong>
    <% else %>
      <strong>Incoming Message <--</strong>
    <% end %>
    <%= message.body %>
  </p>
  <p class='text-sm text-slate-700'>
    Sent at: <%= message.sent_at %>
  </p>

  <p class='text-sm text-slate-700'>
    Delivered at: <%= message.delivered_at %>
  </p>
</div>
